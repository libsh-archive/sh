
// -*- C++ -*-

ShProgram orig = SH_BEGIN_VERTEX_PROGRAM {
  ShInputPosition4f SH_DECL(p); 
  ShInputNormal4f SH_DECL(n); 
  ShInputTexCoord2f SH_DECL(u); 

  ShOutputTexCoord2f SH_DECL(ou);
  ShOutputNormal4f SH_DECL(on);
  ShOutputPosition4f SH_DECL(op) = p + n + u(0,1,0,1); 
  
} SH_END_PROGRAM;

ShProgram shader = shInsert(1) << orig << shExtract("u"); 
