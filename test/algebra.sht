// -*- C++ -*-

ShProgram orig = SH_BEGIN_VERTEX_SHADER {
  ShInputPosition4f ipos;
  ShInputNormal4f inorm;
  ShInputTexCoord2f itex;

  ShOutputPosition4f opos = ipos + ShPoint4f(3.0, 2.0, 1.0, 0.0);
  ShOutputNormal4f onorm = inorm * 6.0;
  ShOutputTexCoord2f otex = itex / 3.0;
  
} SH_END_SHADER;

ShProgram shader = (orig << (keep<ShPosition4f, SH_VERTEX_SHADER>()
                            + lose<ShNormal4f, SH_VERTEX_SHADER>()
                            + keep<ShTexCoord2f, SH_VERTEX_SHADER>()));
