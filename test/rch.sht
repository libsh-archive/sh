// -*- C++ -*-

ShProgram shader = SH_BEGIN_SHADER(0) {
  ShInputAttrib4f in1; NAME(in1);
  ShInputAttrib4f in2; NAME(in2);
  ShOutputAttrib4f out; NAME(out);

  ShAttrib4f t;

  t(0) = in1(0);

  SH_IF(in2(0)) {
    t(0) = in2(0);
  } SH_ELSE {
    //    ShAttrib4f x;
    t = in2;
  } SH_ENDIF;

  t = in2;

  out = t;
} SH_END_SHADER;
