// -*- C++ -*-

ShProgram vprog = SH_BEGIN_VERTEX_PROGRAM {
  ShInputPosition4f ipos;
  ShInputNormal4f inorm;
  
  ShOutputPosition4f opos;
  ShOutputNormal4f onorm;

  opos = ipos + ShConstant4f(0.5, -0.5, 3.0, 4.0);
  onorm = inorm * 3.0;
} SH_END_PROGRAM;

ShProgram spec = SH_BEGIN_VERTEX_PROGRAM {
  ShInputPosition4f ipos;
  ShInputNormal4f inorm;
  
  ShOutputPosition4f opos;

  opos = ipos;
} SH_END_PROGRAM;

ShProgram shader = connect(vprog, spec);


