// -*- C++ -*-
ShArray2D<ShAttrib3f> t2d(320, 200);
ShArrayRect<ShAttrib3f> trect(100, 500);


ShProgram shader = SH_BEGIN_VERTEX_PROGRAM {
  ShOutputAttrib3f SH_DECL(value1);
  ShOutputAttrib3f SH_DECL(value2);
  
  value1 = t2d(ShAttrib2f(0.5, 0.3));
  value1 += t2d[ShAttrib2f(30, 50)];
  
  value2 = trect(ShAttrib2f(0.5, 0.3));
  value2 += trect[ShAttrib2f(30, 50)];
  
} SH_END_PROGRAM;


t2d.size(5000, 2000);
