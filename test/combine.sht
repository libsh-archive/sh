// -*- C++ -*-

ShProgram pos = SH_BEGIN_SHADER(0) {
  ShInputPosition4f ipos;
  ShOutputPosition4f opos;

  opos = ipos + ShConstant4f(0.5, -0.5, 3.0, 4.0);
} SH_END_SHADER;

ShProgram norm = SH_BEGIN_SHADER(0) {
  ShInputNormal3f inorm;
  ShOutputNormal3f onorm;

  onorm = inorm * 3.0;
} SH_END_SHADER;

ShProgram shader = combine(pos, norm);


